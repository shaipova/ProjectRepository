<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TimerButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_height">48dp</item>
        <item name="android:backgroundTint">@color/button_primary</item>
        <item name="cornerRadius">24dp</item>
        <item name="strokeColor">@color/button_stroke</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/button_text_color</item>
    </style>

    <style name="ScheduleCard">
        <item name="android:backgroundTint">@color/card_color</item>
        <item name="cornerRadius">24dp</item>
    </style>

    <style name="TimerButtonStop" parent="TimerButton">
        <item name="android:backgroundTint">@color/stop_button_background</item>
        <item name="android:textColor">@color/button_stop_text_color</item>
    </style>

</resources>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/periodic_toolbar"
        layout="@layout/custom_periodic_toolbar"/>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="@dimen/screen_padding_horizontal"
    android:orientation="vertical">

    <com.example.mytomatotrain.ScheduleCard
        android:id="@+id/periodic_schedule_card"
        android:layout_marginVertical="32dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/periodic_create_task_button"
        style="@style/MyTomatoTrainText.TitleText"
        android:textColor="@color/card_text_color"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/add_new_task"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/periodic_recycler_view"
        android:layout_marginVertical="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

    <TextView
        android:id="@+id/periodic_done_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="@string/done"
        android:visibility="gone"
        android:textSize="12dp"
        android:textAllCaps="true"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/periodic_recycler_view_done_tasks"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

</LinearLayout>
</LinearLayout>